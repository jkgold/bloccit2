<h1>Questions</h1>
<div class="row">
	<div class="col-md-4">


<p>Guidelines for Questions</p>
<ul>
  <li>Make sure it is NOT offensive</li>
</ul>
</div>
<div class="col-md-8">
	<%= form_for @question do |f| %>
	  <div class="form-group">
	   <%= f.label :title %>
	   <%= f.text_area :title, rows: 8, class:'form-control', placeholder: "Enter question title" %>
	  </div>
	  <div class="form-group">
	   <%= f.label :body %>
	   <%= f.text_field :body, rows: 8, class: 'form-control', placeholder: "Enter Question" %>
	  </div>
	  <div class="form-group">
	  	<%= f.submit "Save", class: 'btn btn-success' %>
	  </div>
	  <% end %>
	</div>
</div>



